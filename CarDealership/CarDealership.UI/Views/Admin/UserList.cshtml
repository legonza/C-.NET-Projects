@model IEnumerable<CarDealership.Models.Queries.UsersList>
@{
    ViewBag.Title = "UserList";
}

<h2>Users</h2>
@Html.ActionLink("Add A New User", "AddUser", "Admin")
<div class="row">
    <div class="col-md-10">
        <table style="width:100%">
            <thead>
                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.RoleId</td>
                        <td>@Html.ActionLink("Edit", "EditUser/" + @user.UserId)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


